  <title>2v2 Elo Ranking</title>
  <style>

  </style>
  <script>
    function doLogout() {
      const result = confirm("You sure you want to logout?");
      if (!result) {
        return false;
      }

      const xhr = new XMLHttpRequest();
      xhr.open('POST', "/logout");
      xhr.onload = function () {
        if (xhr.status === 200) {
          console.log('Logged out successfully');
          window.location.href = "/";
        } else {
          alert('Logout failed:', xhr.status);
        }
      };

      xhr.onerror = function () {
        alert('Network error during logout');
      };

      xhr.send();
    }
  </script>
</head>

<body>
  <%- include('partials/body-header.ejs') -%>

  <h1>2v2 Elo Ranking</h1>

  <% if (!authenticated) { %>
  <p class="content-box">
    <a class="pushbutton" href="/login">Login</a>
  </p>
  <% } else { %>
  <p class="content-box">
    Hello <%= locals.user.firstName %>.
  </p>
  <% } %>
  
  <%- include('partials/do-more-section.ejs', {includeLogoutButton: true}) -%>

</body>

